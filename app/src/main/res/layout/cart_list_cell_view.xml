<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:padding="15dp"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/listItemImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_star"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/listItemImageView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listItemNameTextView"
            android:layout_width="wrap_content"
            android:text="Nikhil"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/listItemCategoryTextView"
            android:layout_width="wrap_content"
            android:text="Solanki"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/listItemQuantityTextView"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_height="wrap_content" />
    </LinearLayout>


    <Button
        android:id="@+id/listItemRemoveBUtton"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:layout_alignParentRight="true" />

</RelativeLayout>